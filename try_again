#dictionary for all the spanish values
spanish = {1 : 'Uno' , 2 : 'Dos' , 3 : 'Tres' , 4 : 'Cuatro' , 5 : 'Cinco' , 6 : 'Seis' , 7 : 'Siete' , 8 : 'Ocho' , 9 : 'Nueve' , 10 : 'Diez'}
french = {1 : 'Un' , 2 : 'Deux' , 3: 'Trois' , 4 : 'Quatre' , 5 : 'Cinq' , 6 : 'Six' , 7 : 'Sept' , 8 : 'Huit' , 9 : 'Neuf' , 10: 'Dix'}
te_reo = {1 : 'Tahi' , 2 : 'Rua' , 3 : 'Toru' , 4 : 'Wha' , 5 : 'Rima' , 6 : 'Ono' , 7 : 'Whitu' , 8 : 'Waru' , 9 : 'Iwa' , 10 : 'Tekau'}
