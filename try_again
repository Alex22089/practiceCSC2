language = ""
#checks if the input is an integer, if not, it prints That's not a number!, and reasks the question
while True:
    try: 
        language = input('Spanish, French, Danish Te Reo, or Portuguese? ')
        if language != 'Spanish' and language != 'French'and language != "Te Reo" and language != "Danish" and language != 'Portuguese':
            print("That's not a valid language!")
            continue
    except ValueError:
        print("That's not right!")
        continue
    else:
        break

while True:
    try: 
        x = int(input("Enter an integer 1 - 10: "))
        if x > 10 or x <= 0:
            print("That's not 1 to 10!")
            continue
    except ValueError:
        print("That's not a number!")
        continue
    else:
        break
#checks if the input is numeric if no it loops and re-asks
if language == 'Spanish':
    if x == 1:
        print(f'{x} in Spanish is {spanish[1]}') 
